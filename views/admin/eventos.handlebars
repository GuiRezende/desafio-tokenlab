{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<div class="text-center">
    <h3>Listar eventos</h3>
    <a href="/admin/eventos/add"><button class="btn btn-success">Adicionar</button></a>
</div>
<div class="row row-cols-1 row-cols-lg-4 g-2 g-lg-3 mt-4 text-center">
    {{#each eventos}}
    <div class="mx-auto col">
        <div class="card" style="width: 17rem;">
            <div class="card-body">
                <h5 class="card-title">{{titulo}}</h5>
                <h6 class="card-subtitle mb-2 text-muted"></h6>
                <p class="card-text">
                    <hr>
                    <small><strong>Horários</strong></small>
                    {{evento.criador.nome}}{{criador.nome}}
                    <small><small>
                            <p>Inicio: {{dataHoraInicial}}<br>Fim: {{dataHoraFinal}}</p>
                        </small></small>
                    <hr><small><strong>Descrição:<br></strong></small>
                    {{descricao}}<br>
                    <hr>
                </p>
                <div class="row">
                    <div class="col">
                        <a href="/admin/eventos/edit/{{_id}}"><button class="btn btn-warning">Editar</button></a>
                        <br>
                    </div>
                    <div class="col">
                        <form action="/admin/eventos/deletar/" method="POST">
                            <input type="hidden" name="id" value="{{_id}}">
                            <button type="submit" class="btn btn-danger">Deletar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {{else}}
    <h4 class="mt-3">Nenhum evento registrado!</h4>
    {{/each}}
</div>